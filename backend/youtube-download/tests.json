{
  "tests": [
    {
      "name": "Test OPTIONS CORS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Test missing URL parameter",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "download",
        "quality": "720p"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test search missing query",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "search",
        "max_results": 5
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
